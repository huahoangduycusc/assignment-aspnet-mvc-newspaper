@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <div class="fit">
        <div class="back-category">
            <img src="~/images/category.jpg" alt="">
            <div class="category-title">
                <div class="category-title-header">
                    <p>Explore</p>
                   <h1>Blog</h1>
                </div>
            </div>
        </div>
    </div>
    <section class="blog">
        <div class="list-blog" id="article">
            @{Html.RenderAction("ShowBlog", "Blog");}
        </div>
        <!-- list blog -->
        @if (TempData["countBlog"] != null && (int)TempData["countBlog"] > 4)
        {
            <div class="load-bg">
                <a href="" id="getMore" class="load_more_bg">Load more</a>
            </div>
        }
    </section>
<!-- section blog -->

<script>
    var cmt = 4;
    var skip = 4;
    var flag = false;
    $(document).ready(function () {
        $('#getMore').click(function (e) {
            e.preventDefault();
            if (flag == true) {
                return false;
            }
            flag = true;
            $('#getMore').html("Loading..");
            $.ajax({
                url: '/Blog/ShowBlog',
                type: 'get',
                cache: false,
                data: {
                    skip: cmt
                },
                success: function (data) {
                    cmt += skip;
                    if (data == "") {
                        //alert("Hết dữ liệu");
                        $('#getMore').fadeOut();
                    }
                    //alert(cmt);
                    $('#article').append(data);
                    $('#getMore').html("Load more");
                    flag = false;
                }
            });
        });
    });
</script>