@model IEnumerable<Project.Models.binhluan>
@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="comment-line">
            <h2><a href="@Url.Action("View","Article",new {id=item.aid })">@item.title</a></h2>
            <div class="comment-full">
                <div class="comment-avatar">
                    <img src="~/images/profile/@Url.Content(item.img)" alt="@item.name">
                </div>
                <div class="comment-profile">
                    <p>
                        @{
                            if (item.role == "admin")
                            {
                                <b style="color:#FF5159;font-size:11pt">@item.name - Admin</b>
                            }
                            if (item.role == "btv")
                            {
                                <b style="color:green;font-size:11pt">@item.name - @Project.Resources.MyText.Tbt</b>
                            }
                            if (item.role == "nb")
                            {
                                <b style="color:DarkOrchid;font-size:11pt">@item.name - @Project.Resources.MyText.Nb</b>
                            }
                            if (item.role == "ctv")
                            {
                                <b style="color:#EA9415;font-size:11pt">@item.name - @Project.Resources.MyText.Ctv</b>
                            }
                            if (item.role == "mem")
                            {
                                <b style="color:#013481;font-size:11pt">@item.name</b>
                            }

                           } <span class="times">@item.day</span>
                                    </p>
                    <p class="msg">
                        @item.msg
                    </p>
                    <a href="@Url.Action("View","Article",new {id=item.aid})"><i class="fas fa-eye"></i> View post</a>
                </div>
            </div>
            <!-- comment full -->
        </div>
        <!-- comment line -->
    }
}